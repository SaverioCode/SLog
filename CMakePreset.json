{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Default build: static library, test off, Asan off",
            "generator": "",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "SLOG_BUILD_TYPE": "STATIC",
                "SLOG_BUILD_TESTS": "OFF",
                "ENABLE_ASAN": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dev",
            "description": "Development build: header-only, test on, Asan on",
            "generator": "",
            "binaryDir": "${sourceDir}/build/dev",
            "cacheVariables": {
                "SLOG_BUILD_TYPE": "HEADER_ONLY",
                "SLOG_BUILD_TESTS": "ON",
                "ENABLE_ASAN": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}