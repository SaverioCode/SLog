{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Default build: static library, test off, Asan off",
            "generator": "",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "SLOG_BUILD_TYPE": "STATIC",
                "SLOG_BUILD_TESTS": "OFF",
                "ENABLE_ASAN": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "test",
            "description": "Development build: header-only, test on, Asan on",
            "generator": "",
            "binaryDir": "${sourceDir}/build-test",
            "cacheVariables": {
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/conan_provider.cmake",
                "SLOG_BUILD_TYPE": "HEADER_ONLY",
                "SLOG_BUILD_TESTS": "ON",
                "ENABLE_ASAN": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "environment": {
                "CXXFLAGS": "-DSLOG_STREAM_ENABLED"
            }
        },
        {
            "name": "examples",
            "description": "Build all examples: header-only",
            "generator": "",
            "binaryDir": "${sourceDir}/build-examples",
            "cacheVariables": {
                "SLOG_BUILD_TYPE": "HEADER_ONLY",
                "SLOG_BUILD_EXAMPLES": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "test",
            "configurePreset": "test",
            "configuration": "Release"
        },
        {
            "name": "examples",
            "configurePreset": "examples",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "test",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}